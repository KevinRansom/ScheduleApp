<UserControl x:Class="ScheduleApp.ScheduleViewInnerTabContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ScheduleApp"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!-- (Intentionally left empty. Teacher-specific resources moved to ScheduleViewInnerTabControlByTeacher.xaml) -->
    </UserControl.Resources>

    <ContentControl Margin="{StaticResource NoMarginThickness}">
        <TabControl Style="{StaticResource RoundedTabControl}"
                    x:Name="ScheduleViewInnerTabControl"
                    Margin="{StaticResource NoMarginThickness}"
                    SelectionChanged="ScheduleViewInnerTabControl_SelectionChanged">
            <TabItem x:Name="ScheduleViewInnerTabControlBySupport"
                     Header="By Support">
                <local:ScheduleViewInnerTabControlBySupport x:Name="SupportTabContent"/>
            </TabItem>

            <TabItem x:Name="ScheduleViewInnerTabControlByTeacher"
                     Header="By Teacher">
                <local:ScheduleViewInnerTabControlByTeacher x:Name="TeacherTabContent"/>
            </TabItem>
        </TabControl>
    </ContentControl>
</UserControl>
